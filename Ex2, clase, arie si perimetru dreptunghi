#include <iostream>

using namespace std;

#include <stdio.h>
#include <stdlib.h>
#include <conio.h>
#include <string.h>



class Dreptunghi
{  int l,L;
public:
    void arie();
    void perimetru();
};

void Dreptunghi::arie()
{printf("Introduceti latime dreptunghi:");
scanf("%d",&L);
printf("\nIntroduceti lungime dreptunghi:");
scanf("%d",&l);
    printf("\nAria dreptunghiului este: ");
printf("\n%d", L*l);
}
void Dreptunghi::perimetru()
{
printf("\nPerimetrul dreptunghiului este: ");
printf("\n%d",2*(l+L));

}

int main()
{
Dreptunghi p;
p.arie();
printf("\n");
p.perimetru();

return 0;
}
